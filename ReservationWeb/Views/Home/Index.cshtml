@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <p class="lead">Загрузите данные о записях.</p>
    @*<p><a class="btn btn-primary btn-lg">Загрузить</a></p>*@
    @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input id="fileInput" type="file" name="file" accept=".xml">
        <input type="submit" value="Загрузить" /> @ViewBag.UploadStatus
    }

    @using (Html.BeginForm("Download", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="submit" value="Сохранить данные в Excel" /> @ViewBag.DownloadStatus
    }
</div>
Имеющиеся данные: <br />
@foreach (string line in ViewBag.Data)
{
    @Html.Raw(line)
    <br />
}